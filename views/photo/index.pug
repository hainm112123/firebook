doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Firebook
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js", integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa", crossorigin="anonymous") 
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css")
    link(rel="stylesheet", href="/style/photo/index.css")
  body 
    .page-container 
      .navigation 
        a.close-btn(href="/")
          i(class="fa-solid fa-x")
        a.home-btn(href="/")
          img(class="navbar-brand__logo" src="/image/icon/fb.png" alt="fb")
      .page-body 
        .image-box 
          img(src=url, alt="")
        a.direct-btn.prev-btn(href=baseUrl+"?set="+set+"&index="+(index - 1) class=firstPhoto ? "direct-btn__disable" : "")
          .icon-container
            i(class="fa-solid fa-angle-left")
        a.direct-btn.next-btn(href=baseUrl+"?set="+set+"&index="+(index + 1) class=lastPhoto ? "direct-btn__disable" : "") 
          .icon-container
            i(class="fa-solid fa-angle-right")
