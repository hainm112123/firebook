doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Social
    
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js", integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa", crossorigin="anonymous") 
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css")
    
    link(rel="stylesheet", href="/style/common.css") 

    block css-external 
    block js-external
  body 
    nav.container-fluid(class="navbar navbar-expand-lg" style="background-color: rgba(46, 47, 48, 1)") 
        .row
          div(class="navbar-left col-4") 
            a(class="navbar-brand navbar-logo-container" src="" href="/")
              img(class="navbar-brand__logo" src="/image/icon/fb.png", alt="fb")
            button(class="navbar-search-back-btn btn btn-secondary" type="button")
              i(class="fa-solid fa-arrow-left")
            form(class="navbar-search" action="#" method="GET") 
              input(class="form-control navbar-search__input" type="text" placeholder="Search Facebook") 
          div(class="navbar-center col-4")
            
          div(class="navbar-right col-4")
    
    script(src="/js/common.js") 